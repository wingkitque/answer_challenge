page {
  background: url('https://www.wingkit.xyz/question/img/ranking.jpg') no-repeat;
  background-size:100% 100%; 
  background-attachment: fixed; 
  color: black;
}

.tab {
  background:transparent;
  display: flex;
  justify-content: space-around;
  text-align: center;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #999;
  font-weight: bold;
}

.tab view {
  width: 30%;
}

.on {
  color: #333;
  border-bottom: 4rpx solid #32e0ffec;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  width: 80%;
  margin: 30rpx auto;
  border-radius: 10rpx;
  padding: 20rpx;
  background: none;
  border: 1rpx solid #87CEEB;
  /*background: #999;
  background: url('https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=3218774108,759559221&fm=26&gp=0.jpg') no-repeat;*/
}

.item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 8rpx solid #87CEEB;
}

.itemDetail {
  display: flex;
  justify-content: space-between;
}

.itemDetail text {
  display: inline-block;
  margin: 10rpx;
}
